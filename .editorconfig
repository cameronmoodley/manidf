# editorconfig.org

root = true

# 3 space indentation
[*.{js,jsx,html,xml,scss,css,txt,log,md}]
indent_style = tab
end_of_line = lf
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

# 2 space indentation
[*.{json,sh}]
indent_style = space
indent_size = 2
charset = utf-8

[*yml]
indent_style = space
indent_size = 2
